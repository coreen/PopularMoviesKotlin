<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_trailer_icon"
        android:layout_width="24pt"
        android:layout_height="24pt"
        android:src="@drawable/trailer" />

    <TextView
        android:id="@+id/tv_trailer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingTop="12dp"
        android:textSize="8pt"
        app:layout_constraintStart_toEndOf="@+id/iv_trailer_icon" />

    <!-- Separating line between trailers -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@id/iv_trailer_icon" />

</android.support.constraint.ConstraintLayout>